<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://java.sun.com/xml/ns/javaee 
              http://java.sun.com/xml/ns/javaee/web-app_2_5.xsd"
         version="2.5"
         xmlns="http://java.sun.com/xml/ns/javaee">

  <!-- Servlets -->
  <servlet>
    <servlet-name>greetServlet</servlet-name>
    <servlet-class>pointMeApp.server.GreetingServiceImpl</servlet-class>
  </servlet>
  
  <servlet-mapping>
    <servlet-name>greetServlet</servlet-name>
    <url-pattern>/pointmeapp/greet</url-pattern>
  </servlet-mapping>
    <servlet>
    <servlet-name>TwilioController</servlet-name>
    <servlet-class>pointMeApp.server.TwilioController</servlet-class>
  </servlet>
    <servlet-mapping>
    <servlet-name>TwilioController</servlet-name>
    <url-pattern>/TwilioSend</url-pattern>
  </servlet-mapping>
  <servlet-mapping>
    <servlet-name>RegisterLocation</servlet-name>
    <url-pattern>/registerLocation</url-pattern>
  </servlet-mapping>
      <servlet>
    <servlet-name>RegisterLocation</servlet-name>
    <servlet-class>pointMeApp.server.ObtainLocation</servlet-class>
  </servlet>
    <servlet-mapping>
    <servlet-name>IntroScreen</servlet-name>
    <url-pattern>/IntroScreen</url-pattern>
  </servlet-mapping>
      <servlet>
    <servlet-name>IntroScreen</servlet-name>
    <servlet-class>pointMeApp.server.ObtainLocation</servlet-class>
  </servlet>
      <servlet>
    <servlet-name>Locate</servlet-name>
    <jsp-file>/WEB-INF/locate.jsp</jsp-file>
  </servlet>
  <servlet-mapping>
    <servlet-name>Locate</servlet-name>
    <url-pattern>/locate/*</url-pattern>
  </servlet-mapping>
  <!-- Default page to serve -->
  <welcome-file-list>
    <welcome-file>PointMeApp.html</welcome-file>
  </welcome-file-list>
<filter>
        <filter-name>ObjectifyFilter</filter-name>
        <filter-class>com.googlecode.objectify.ObjectifyFilter</filter-class>
</filter>
<filter-mapping>
        <filter-name>ObjectifyFilter</filter-name>
        <url-pattern>/*</url-pattern>
</filter-mapping>
</web-app>
